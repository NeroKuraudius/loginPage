<div class="container mt-5"
  style="margin:0 auto;padding-top:1px;height:400px;max-width:35%;background-color: #fee282;border-radius:6%;">
  <form action="/" method="POST">
    <label class="mt-5" for="exampleInputEmail1" style="display:block;font-size:32px;text-align:center">Account
      Login</label>
    <div class="inner-container" style="margin:0 auto;max-width:80%">
      <div class="mt-5">
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email"
          aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mt-3 mb-3">
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-info" style="float:right;">Login</button>
    </div>

  </form>
</div>